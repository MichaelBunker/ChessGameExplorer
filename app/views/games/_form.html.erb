<%= form_for @game, :html => {multipart: true} do |f| %>
  <div class="form-group">
    <%= f.label :notation %>
    <%= f.text_field :notation, class: "form-control", id: "game_notation_form" %>
  </div>
  <div class="form-group">
    <%= f.file_field :pgn %>
  </div>

  <% @players.each do |player| %>
    <%= label_tag player.name %>
    <%= check_box_tag "player_ids[]", player.id %>
  <% end %>

<br>
  <%= f.submit "Add" %>
<% end %>
